<h1>Create new user</h1>

<%= form_for @user do |f| %>
  <label>Username</label>
  <%= f.text_field :username %>

  <label>Location</label>
  <%= f.text_field :location %>

  <label>Birthday</label>
  <%= f.date_select :birthdate %>

  <label>Bio</label>
  <%= f.text_area :bio %>

  <%= submit_tag 'Save', :class => 'btn primary large' %>
<% end %>
